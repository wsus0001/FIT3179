{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "title": "Highest university ranking by country",
    "width": 800,
    "height": 600,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/wsus0001/FIT3179/master/Assignment%202/world.topojson",
      "format": {"type": "topojson", "feature": "ne_50m_admin_0_sovereignty"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/wsus0001/FIT3179/master/Assignment%202/HighestRank.csv"
          },
          "key": "Country",
          "fields": ["MinimumRank"]
        }
      },
      {"calculate": "datum.MinimumRank? parseFloat(datum.MinimumRank) + 0.1: -1", "as": "rank"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "rank",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [1, 50, 100, 250],
          "range": ["#dddddd", "#238b45", "#66c2a4", "#b2e2e2", "#edf8fb"]
        }
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "MinimumRank", "type": "quantitative"}
      ]
    }
  }