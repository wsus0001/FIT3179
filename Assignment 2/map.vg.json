{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "title": "Highest university ranking by country",
    "width": 800,
    "height": 600,
    "projection": {"type": "equirectangular"},
    "data": {
        "url": "https://raw.githubusercontent.com/wsus0001/FIT3179/master/Assignment%202/world.topojson",
        "format": {"type": "topojson", "feature": "world"}
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {"url": "https://raw.githubusercontent.com/wsus0001/FIT3179/master/Assignment%202/HighestRank.csv"},
                "key": "Country",
                "fields": ["MinimumRank"]
            }
        },
        {"calculate": "datum", "as": "rank"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
            "field": "rank",
            "type": "quantitative",
            "scale": {"type": "linear"}
        },
        "tooltip": [
            {"field": "properties.name", "type": "nominal", "title": "Country"},
            {"field": "Active", "type": "quantitative"}
        ]
    }
}
   